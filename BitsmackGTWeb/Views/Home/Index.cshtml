@{
    ViewBag.Title = "Home Page";
}

<h2>Dashboard</h2>

<h3>Pedometer</h3>
<table>
    <tr>
        <td style="vertical-align: top">
            <table>
                <tr>
                    <td>Number of Days:</td>
                    <td id="numofdays"></td>
                </tr>
                <tr>
                    <td>Average Steps:</td>
                    <td id="avgsteps"></td>
                </tr>
                <tr>
                    <td>Trend Steps</td>
                    <td id="trendsteps"></td>
                </tr>
                <tr>
                    <td>New Step Goal:</td>
                    <td id="newstepgoal"></td>
                </tr>
                <tr>
                    <td>Average Sleep Time:</td>
                    <td id="avgsleep"></td>
                </tr>
                <tr>
                    <td>Sleep Goal</td>
                    <td id="sleepgoal"></td>
                </tr>
            </table>
        </td>
        <td>
            <table id="recentPedometerEntries">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Steps
                        </th>
                        <th>
                            Sleep
                        </th>
                        <th>Created Date</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
            </table>
        </td>
        <td>
            <div id="pedometerMonthAvg"></div>
        </td>
    </tr>
</table>
<h3>Weight and Diet</h3>
<table>
    <tr>
        <td style="vertical-align: top">
            <table>
                <tr>
                    <td>Date Range</td>
                    <td id="weightDateRange"></td>
                </tr>
                <tr>
                    <td>Weight Loss</td>
                    <td id="weightLoss"></td>
                </tr>
                <tr>
                    <td>Calories Consumed Per Day</td>
                    <td id="calConsumedPerDay"></td>
                </tr>
                <tr>
                    <td>Calories Burned Per Day</td>
                    <td id="calBurnedPerDay"></td>
                </tr>
                <tr>
                    <td>New Calorie Goal (1lb per week)</td>
                    <td id="newCalorieGoal"></td>
                </tr>
            </table>
        </td>
        <td>
            <table id="weightCalTable"> 
                <thead><th>Date</th>
                    <th>Weight</th>
                    <th>Trend</th>
                    <th>Calories Consumed</th>
                </thead>  

            </table> 
        </td>
    </tr>
</table>
<h3>Running</h3>
<table>
    <tr>
        <td style="vertical-align: top">
            <div id="cardiosummary">
                   <table>
                        <tr>
                            <td>Total Runs:</td>
                            <td id="totalruns"></td>
                        </tr>
                        <tr>
                            <td>Average Miles Per Run:</td>
                            <td id="avgmiles"></td>
                        </tr>
                        <tr>
                            <td>Average Adjusted 5K Time</td>
                            <td id="avgadj5ktime"></td>
                        </tr>
       
                    </table>

            </div>
        </td>
        <td>
            <div>
                <table id="trainingpaces">
                    <tr>
                        <td>
                            Distance
                        </td>
                        <td>
                            Goal Time
                        </td>
                        <td>
                            Goal Pace
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>

